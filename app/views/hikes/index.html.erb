<h1>All Hikes</h1>

<div>
<%= link_to "Create a New Hike", new_hike_path %>
</div>

<div>
<%= form_tag(hikes_path, method: "get") do %>
    <h3>Filter hikes by features:</h3>
    <%= select_tag :filter, options_for_select([ ['Mountains'], ['Beaches'], ['Waterfalls'], ['Wildflowers'], ['Family-friendly'], ['Dog-friendly'] ]) %><br><br>
    <%= submit_tag("Filter Hikes") %><br>
<% end %>
</div>

<div>
<%= render partial: "list", locals: {hikes: @hikes} %>
</div>